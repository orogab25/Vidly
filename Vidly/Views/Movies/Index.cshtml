@model Vidly.ViewModels.MoviesViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Movies == null || Model.Movies.Count == 0)
{
    <text>
        No movies!
    </text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Movie
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Movies)
            {
                <tr>
                    <td>
                        @customer.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>
}