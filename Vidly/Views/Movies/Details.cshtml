@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>
        Genre: @Model.Genre.Name
    </li>
    <li>
        Release Date: @Model.ReleaseDate.DayOfWeek.ToString(), @String.Format("{0:MMMM}", Model.ReleaseDate) @Model.ReleaseDate.Day.ToString(), @Model.ReleaseDate.Year.ToString()
    </li>
    <li>
        Date Added: @Model.DateAdded.DayOfWeek.ToString(), @String.Format("{0:MMMM}", Model.DateAdded) @Model.DateAdded.Day.ToString(), @Model.DateAdded.Year.ToString()
    </li>
    <li>
        Number in Stock: @Model.InStock
    </li>
</ul>
